{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Sample",
            "type": "shell",
            "command": "g++",
            "args": [
                "${input:sampleDir}/*.cpp",
                "-o", "${input:sampleDir}/app.exe",
                "-std=c++17",
                "-I", "${workspaceFolder}/include",
                "-lws2_32",
                "-lmswsock",
                "-lpthread"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build and Run Sample",
            "type": "shell",
            "command": "${input:sampleDir}/app.exe",
            "dependsOn": "Build Sample",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Run Sample",
            "type": "shell",
            "command": "${input:sampleDir}/app.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
    ],
    "inputs": [
        {
            "id": "sampleDir",
            "type": "pickString",
            "description": "选择要编译运行的示例",
            "options": [
                "${workspaceFolder}",
                "${workspaceFolder}/samples/hello_world",
                "${workspaceFolder}/samples/json_api"
            ],
            "default": "${workspaceFolder}"
        }
    ]
}
